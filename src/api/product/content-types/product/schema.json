{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "product_id": {
      "type": "uid"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "soap",
        "essential_oil"
      ],
      "default": "soap"
    },
    "price": {
      "type": "float"
    },
    "color": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "smell": {
      "type": "string"
    },
    "weight": {
      "type": "float"
    },
    "description": {
      "type": "richtext"
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ingredients": {
      "type": "json"
    },
    "productComponent": {
      "type": "component",
      "repeatable": true,
      "component": "product-component.product-component"
    }
  }
}
